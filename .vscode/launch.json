{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server direct",
            "program": "${workspaceFolder}/dist/node/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "env":{
                "OLLAMA_API_URL_oo": "http://192.168.178.29:11434",
                "OLLAMA_API_URL": "http://127.0.0.1:11434",
                "MONGO_URL": "192.168.178.29:27017",
                "MONGO_DB_NAME": "mididb",
                "MONGO_DB_COLLECTION": "midifiles"
            },
            "preLaunchTask": "build-server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron App",
            "runtimeExecutable": "${workspaceFolder}/node_modules/@electron-forge/cli/script/vscode.sh",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/@electron-forge/cli/script/vscode.cmd"
            },
            "env": {
                "OLLAMA_API_URL_oo": "http://192.168.178.29:11434",
                "OLLAMA_API_URL": "http://127.0.0.1:11434",
                "MONGO_URL": "192.168.178.29:27017",
                "MONGO_DB_NAME": "mididb",
                "MONGO_DB_COLLECTION": "midifiles"
            },
            // runtimeArgs will be passed directly to your Electron application
            "runtimeArgs": [
                
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug aktuelle TS-Datei",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node",
                "${file}"
            ],
            "console": "integratedTerminal"
        }
    ]
}
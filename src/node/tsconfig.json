{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "commonjs",
    "outDir": "../../dist",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "**/*",
    "../*",
    "../electron/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../web/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "../**/*.tsx",
    "../index*",
    "../preload.ts"
  ]
}
